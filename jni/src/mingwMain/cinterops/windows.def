headers = windows.h winsock2.h winsock.h string.h stdlib.h dwmapi.h
headerFilter = windows.h winsock2.h winsock.h string.h stdlib.h dwmapi.h \
                minwindef.h winbase.h winerror.h winnt.h \
                handleapi.h fileapi.h errhandlingapi.h namedpipeapi.h \
