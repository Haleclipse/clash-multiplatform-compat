#include <windows.h>
#include <winnt.h>
#include <ws2tcpip.h>
#include <winsock2.h>
#include <windowsx.h>
#include <stdint.h>

struct sockaddr_un {
  ADDRESS_FAMILY sun_family;
  char sun_path[108];
};

extern UINT GetDpiForWindow(HWND handle);
extern int GetSystemMetricsForDpi(int index, UINT dpi);

inline static DWORD makeLanguageId(DWORD primary, DWORD sublanguage) {
    return MAKELANGID(primary, sublanguage);
}

inline static SOCKET invalidSocket() {
    return INVALID_SOCKET;
}

inline static SIZE_T toSize(int64_t size) {
    return (SIZE_T) size;
}

inline static LONG toLONG(void *ptr) {
    return (LONG) ptr;
}

inline static int32_t getXFromLParam(LPARAM lParam) {
    return GET_X_LPARAM(lParam);
}

inline static int32_t getYFromLParam(LPARAM lParam) {
    return GET_Y_LPARAM(lParam);
}